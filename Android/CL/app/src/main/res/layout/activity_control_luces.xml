<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tec.controlluces.ControlLuces">

    <TextView
        android:id="@+id/Info"
        android:text="Ingrese la informaciÃ³n solicitada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="18sp"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="16sp"
        android:layout_below="@+id/Info"
        android:hint="Port"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="16sp"
        android:layout_below="@+id/port"
        android:hint="Address"/>
    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="16sp"
        android:layout_below="@+id/address"
        android:text="Limpiar"/>

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="16sp"
        android:layout_below="@+id/clear"
        android:text="Conectar"
        android:contextClickable="true" />

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="16sp"
        android:layout_below="@+id/connect"/>

    <Button
        android:id="@+id/continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:textSize="16sp"
        android:layout_below="@+id/response"
        android:text="Continuar" />

    <Button
        android:id="@+id/Luz3"
        android:layout_marginTop="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/led_red"
        android:visibility="invisible"
        tools:textSize="16sp"
        android:text="@string/Luz3"/>
    <Button
        android:id="@+id/Luz4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/led_red"
        android:visibility="invisible"
        android:layout_below="@+id/Luz3"
        tools:textSize="16sp"
        android:text="@string/Luz4"/>

    <Button
        android:id="@+id/Luz5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/led_red"
        android:visibility="invisible"
        android:layout_below="@+id/Luz4"
        tools:textSize="16sp"
        android:text="@string/Luz5"/>

    <Button
        android:id="@+id/Luz6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/led_red"
        android:visibility="invisible"
        android:layout_below="@+id/Luz5"
        tools:textSize="16sp"
        android:text="@string/Luz6"/>

    <Button
        android:id="@+id/Luz7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/led_red"
        android:visibility="invisible"
        android:layout_below="@+id/Luz6"
        tools:textSize="16sp"
        android:text="@string/Luz7"/>
</RelativeLayout>
